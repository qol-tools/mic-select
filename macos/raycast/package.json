{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "select-mic",
  "title": "Select Microphone",
  "description": "Switch between audio input sources",
  "icon": "../../assets/icon.svg",
  "author": "KMRH47",
  "categories": [
    "Productivity",
    "System"
  ],
  "license": "MIT",
  "assets": [
    "raycast_cli.py",
    "lib"
  ],
  "commands": [
    {
      "name": "list",
      "title": "mic",
      "description": "List and switch microphones",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.80.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.14.0",
    "@types/react": "^19.0.10",
    "eslint": "^8.57.0",
    "jest": "^29.5.0",
    "prettier": "^3.3.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.5.0"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "test": "jest && python3 test_raycast_cli.py",
    "test:unit": "jest",
    "test:cli": "python3 test_raycast_cli.py",
    "test:watch": "jest --watch",
    "publish": "ray publish"
  }
}
