{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "select-mic",
  "title": "Select Microphone",
  "description": "Switch between audio input sources",
  "icon": "../../assets/icon.svg",
  "author": "KMRH47",
  "categories": [
    "Productivity",
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "list",
      "title": "List Microphones",
      "description": "List and switch between audio input sources",
      "mode": "view",
      "keywords": ["mic", "microphone"]
    },
    {
      "name": "switch",
      "title": "Switch Microphone",
      "description": "Quick switch to a microphone",
      "mode": "view",
      "keywords": ["mic", "microphone"]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.80.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "^20.14.0",
    "@types/react": "^19.0.10",
    "eslint": "^8.57.0",
    "prettier": "^3.3.0",
    "typescript": "^5.5.0"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
